                  "scope-alias": "p",
                  "types": [
                     "security",
                     "build",
                     "vendor",
                     "ci",
                     "docs",
                     "chore"
                  ]
               },
               {
                  "name": "semver-def-display",
                  "description": "Utility to display and query a semver project definition file",
                  "scope": "display",
                  "scope-alias": "d",
                  "path": ["/util/**/semver[_-]def[_-]display"],
                  "types": [
                     "feat",
                     "more",
                     "change",
                     "fix",
                     "deprecate",
                     "remove",
                     "less",
                     "refactor",
                     "perf",
                     "security",
                     "style",
                     "test",
                     "docs",
                     "idocs",
                     "build",
                     "vendor",
                     "ci",
                     "chore"
                  ]
               },
               {
                  "name": "semver-ver",
                  "description": "Utility to create initial version file, validate version files, and generate updates",
                  "scope": "ver",
                  "scope-alias": "v",
                  "path": ["/util/**/semver[_-]ver"],
                  "types": [
                     "feat",
                     "more",
                     "change",
                     "fix",
                     "deprecate",
                     "remove",
                     "less",
                     "refactor",
                     "perf",
                     "security",
                     "style",
