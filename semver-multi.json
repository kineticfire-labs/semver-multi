{
   "commit-msg-enforcement": {
      "enabled": true
   },
   "commit-msg": {
      "length": {
         "title-line": {
            "min": 20,
            "max": 50
         },
         "body-line": {
            "min": 2,
            "max": 72
         }
      }
   },
   "release-branches": ["main"],
   "project": {
      "name": "semver-multi-project",
      "description": "Project for automated semantic versioning of multiple artifacts",
      "includes": [
         "readme"
      ],
      "scope": "proj",
      "scope-alias": "p",
      "types": [
         "revert",
         "merge",
         "security",
         "build",
         "vendor",
         "struct",
         "ci",
         "ops",
         "docs",
         "chore"
      ],
      "artifacts": [
         {
            "name": "semver-multi",
            "description": "Package release of semver-multi",
            "scope": "pack",
            "scope-alias": "p",
            "types": [
               "security",
               "build",
               "vendor",
               "ci",
               "docs",
               "chore"
            ]
         }
      ],
      "projects": [
         {
            "name": "semver-multi-app-project",
            "description": "Project for semver-multi application project",
            "includes": [
               "readme"
            ],
            "scope": "app",
            "scope-alias": "a",
            "path": ["/app"],
            "types": [
               "revert",
               "security",
               "build",
               "vendor",
               "struct",
               "ci",
               "docs",
               "chore"
            ],
            "artifacts": [
               {
                  "name": "semver-multi-app",
                  "description": "semver-multi application",
                  "scope": "app",
                  "scope-alias": "a",
                  "types": [
                     "feat",
                     "more",
                     "change",
                     "fix",
                     "deprecate",
                     "remove",
                     "less",
                     "refactor",
                     "perf",
                     "security",
                     "style",
                     "test",
                     "docs",
                     "idocs",
                     "build",
                     "vendor",
                     "ci",
                     "chore"
                  ]
               }
            ]
         },
         {
            "name": "util-project",
            "description": "Project for utilities",
            "scope": "util",
            "scope-alias": "u",
            "path": ["/util"],
            "types": [
               "security",
               "build",
               "vendor",
               "struct",
               "ci",
               "docs",
               "chore"
            ],
            "artifacts": [
               {
                  "name": "util",
