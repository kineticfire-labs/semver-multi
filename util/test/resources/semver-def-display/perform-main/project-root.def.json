{
    "commit-msg-enforcement": {
        "enabled": true
     },
     "commit-msg": {
        "length": {
           "title-line": {
              "min": 20,
              "max": 50
           },
           "body-line": {
              "min": 2,
              "max": 72
           }
        }
     },
    "project":
        {
            "name": "Top Project",
            "scope": "proj",
            "scope-alias": "p",
            "description": "The top project.",
            "includes": [
                "readme", 
                "dev-guide"
            ],
            "types": [
                "revert",
                "security",
                "build",
                "vendor",
                "ci",
                "docs",
                "chore"
             ]
        }
}

