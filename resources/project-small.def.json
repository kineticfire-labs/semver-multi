{
   "commit-msg-enforcement": {
      "enabled": true
   },
   "commit-msg": {
      "length": {
         "title-line": {
            "min": 20,
            "max": 50
         },
         "body-line": {
            "min": 2,
            "max": 72
         }
      }
   },
   "project": {
      "name": "simple-lib",
      "description": "Top-level project for simple-lib",
      "includes": [
         "readme"
      ],
      "scope": "proj",
      "scope-alias": "p",
      "types": [
         "revert",
         "security",
         "build",
         "vendor",
         "ci",
         "docs",
         "chore"
      ],
      "artifacts": [
         {
            "name": "simple-lib.jar",
            "description": "simple-lib.jar",
            "scope": "lib",
            "scope-alias": "l",
            "types": [
               "feat",
               "more",
               "change",
               "fix",
               "deprecate",
               "remove",
               "less",
               "refactor",
               "perf",
               "security",
               "style",
               "test",
               "docs",
               "build",
               "vendor",
               "ci",
               "chore"
            ]
         }
      ]
   }
}
